{
  "manifest_version": 3,
  "name": "LinkedIn Job Detail Auto Copier (Personal)",
  "version": "0.1.1",
  "description": "Automatically copies LinkedIn job details to the clipboard when you open a job in search results (personal use).",
  "permissions": [
    "offscreen",
    "clipboardWrite",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "LI Auto Copier"
  },
  "icons": {
    "128": "icon128.png"
  }
}
